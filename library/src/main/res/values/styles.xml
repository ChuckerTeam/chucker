<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Chucker.BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/chucker_color_primary</item>
        <item name="colorPrimaryDark">@color/chucker_color_primary_variant</item>
        <item name="colorSecondary">@color/chucker_color_secondary</item>
        <item name="android:colorBackground">@color/chucker_color_background</item>
        <item name="colorSurface">@color/chucker_color_surface</item>
        <item name="colorError">@color/chucker_status_error</item>
        <item name="colorOnPrimary">@color/chucker_color_on_primary</item>
        <item name="colorOnSecondary">@color/chucker_color_on_secondary</item>
        <item name="colorOnBackground">@color/chucker_color_on_background</item>
        <item name="colorOnSurface">@color/chucker_color_on_surface</item>
        <item name="colorOnError">@color/chucker_color_on_error</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Chucker.Theme" parent="Chucker.BaseTheme" />

    <style name="Chucker.TextAppearance.ListItem" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Chucker.TextAppearance.Label" parent="android:TextAppearance.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Chucker.TextAppearance.Value" parent="android:TextAppearance.Small">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="Chucker.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Chucker.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Chucker.Button.Tag" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/chucker_base_grid</item>
        <item name="android:inset">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Chucker.Theme.FilterDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/chucker_color_primary</item>
        <item name="colorPrimaryDark">@color/chucker_color_primary_variant</item>
        <item name="colorSecondary">@color/chucker_color_secondary</item>
        <item name="android:colorBackground">@color/chucker_color_background</item>
        <item name="colorSurface">@color/chucker_color_surface</item>
        <item name="colorOnPrimary">@color/chucker_color_on_primary</item>
        <item name="colorOnSecondary">@color/chucker_color_on_secondary</item>
        <item name="colorOnBackground">@color/chucker_color_on_background</item>
        <item name="colorOnSurface">@color/chucker_color_on_surface</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
</resources>
