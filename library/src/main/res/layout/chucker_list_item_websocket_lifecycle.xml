<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/chucker_base_grid">

    <ImageView
        android:id="@+id/chuckerWebsocketIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/chucker_websocket"
        android:src="@drawable/chucket_ic_websocket"
        android:tint="@color/chucker_primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chuckerWebsocketOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:textAppearance="@style/Chucker.TextAppearance.ListItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Send" />

    <TextView
        android:id="@+id/chuckerPath"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/Chucker.TextAppearance.ListItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chuckerWebsocketOperation"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="/path/to/some/resource?goes=here" />

    <ImageView
        android:id="@+id/chuckerSsl"
        android:layout_width="@dimen/chucker_doub_grid"
        android:layout_height="@dimen/chucker_doub_grid"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/chucker_ssl"
        android:src="@drawable/chucker_ic_https_grey_24dp"
        android:tint="@color/chucker_primary_color"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chuckerWebsocketOperation"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/chuckerHost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/chucker_half_grid"
        app:layout_constraintTop_toBottomOf="@+id/chuckerWebsocketOperation"
        app:layout_constraintStart_toEndOf="@id/chuckerSsl"
        app:layout_goneMarginStart="56dp"
        app:layout_goneMarginTop="@dimen/chucker_doub_grid"
        tools:text="example.com" />

    <TextView
        android:id="@+id/chuckerTimestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chuckerHost"
        tools:text="18:29:07 PM" />

</androidx.constraintlayout.widget.ConstraintLayout>